# DevContainer Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control

# Claude Code Configuration
CLAUDE_HOOKS_ENABLED=true
CLAUDE_PROJECT_ROOT=${containerWorkspaceFolder}
CLAUDE_MEMORY_BANK_OPTIMIZED=true

# API Keys (if needed)
# ANTHROPIC_API_KEY=your_api_key_here
# OPENAI_API_KEY=your_api_key_here

# GitHub Configuration (optional)
# GITHUB_TOKEN=your_github_token_here
# GITHUB_USER=your_github_username

# Database Configuration
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=devdb
# DB_USER=developer
# DB_PASSWORD=secure_password_here

# External Services (optional)
# SLACK_WEBHOOK_URL=
# DISCORD_WEBHOOK_URL=
# EMAIL_API_KEY=

# Development Settings
NODE_ENV=development
PYTHON_ENV=development
DEBUG=false
LOG_LEVEL=info

# Memory Bank Settings
MEMORY_BANK_SYNC_INTERVAL=300  # seconds
MEMORY_BANK_MAX_SIZE=100       # MB
MEMORY_BANK_AUTO_ORGANIZE=true

# Security Settings
ENABLE_SECURITY_HOOKS=true
COMMAND_LOG_RETENTION_DAYS=30
SECURITY_ALERT_EMAIL=

# Performance Settings
MAX_PARALLEL_WORKERS=4
CACHE_TTL=300  # seconds

# Custom Project Settings
# Add your project-specific environment variables below
# PROJECT_CUSTOM_VAR=value